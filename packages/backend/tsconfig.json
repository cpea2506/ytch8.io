{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": [
            "esnext"
        ],
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "**/*.{ts, tsx}"
    ],
    "exclude": [
        "node_modules"
    ]
}
