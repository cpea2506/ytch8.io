{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": ["ESNext"],
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src", "**/*.{ts, tsx}"],
    "exclude": ["node_modules"]
}
